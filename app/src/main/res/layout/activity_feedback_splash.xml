<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFE"
    android:fitsSystemWindows="true"
    tools:context=".activities.FeedbackSplashActivity"
    android:animateLayoutChanges="true">

    <!-- Sprinkle Animation (Top to Bottom) -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sprinkles"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_gravity="top"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/sprinkles" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:paddingTop="60dp">

        <!-- Feedback Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieFeedback"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/feedback" />

        <!-- Feedback Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Much appreciated!ðŸ¤©\nKeep sharing your thoughts!ðŸ’¡"
            android:textAlignment="center"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
